{
    "compilerOptions": {
        "allowJs": true,
        "baseUrl": ".",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "node",
        "noEmit": true,
        "paths": {
            "@assets/*": ["assets/*"],
            "@components/*": ["components/*"],
            "@config/*": ["config/*"],
            "@constants/*": ["constants/*"],
            "@containers/*": ["containers/*"],
            "@context/*": ["context/*"],
            "@hooks/*": ["hooks/*"],
            "@interceptors/*": ["interceptors/*"],
            "@locales/*": ["locales/*"],
            "@pages/*": ["pages/*"],
            "@public/*": ["public/*"],
            "@redux/*": ["redux/*"],
            "@services/*": ["services/*"],
            "@shared/*": ["shared/*"],
            "@styles/*": ["styles/*"],
            "@slices/*": ["redux/slices/*"],
            "@utils/*": ["utils/*"]
        },
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "es5"
    },
    "include": ["**/*.js", "**/*.jsx", "tailwind.config.js"],
    "exclude": ["node_modules"]
}
